<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.add.account.AddAccountFragment">

    <TextView
        style="@style/primary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="16dp"
        android:text="@string/add_account_title" />

    <EditText
        android:id="@+id/uid"
        style="@style/et_add_account"
        android:drawableStart="@drawable/ic_id_24"
        android:hint="@string/add_account_et_hint_uid"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/username"
        style="@style/et_add_account"
        android:drawableStart="@drawable/ic_user_28"
        android:hint="@string/add_account_et_hint_username"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/password"
        style="@style/et_add_account"
        android:drawableStart="@drawable/ic_password_24"
        android:hint="@string/add_account_et_hint_password"
        android:importantForAutofill="no"
        android:inputType="textPassword" />

    <!--    <EditText-->
    <!--        android:id="@+id/tele"-->
    <!--        style="@style/et_add_account"-->
    <!--        android:drawableStart="@drawable/ic_phone_24"-->
    <!--        android:hint="@string/add_account_et_hint_tele"-->
    <!--        android:importantForAutofill="no"-->
    <!--        android:inputType="phone" />-->

    <!--    <EditText-->
    <!--        android:id="@+id/email"-->
    <!--        style="@style/et_add_account"-->
    <!--        android:drawableStart="@drawable/ic_email_24"-->
    <!--        android:hint="@string/add_account_et_hint_email"-->
    <!--        android:importantForAutofill="no"-->
    <!--        android:inputType="textEmailAddress" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_et_add"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/login_tele"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_tele"
                android:src="@drawable/ic_phone_28" />

            <ImageButton
                android:id="@+id/login_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_email"
                android:src="@drawable/ic_email_28" />

            <ImageButton
                android:id="@+id/login_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_qq"
                android:src="@drawable/ic_qq_28" />

            <ImageButton
                android:id="@+id/login_wechat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_wechat"
                android:src="@drawable/ic_wechat_28" />

            <ImageButton
                android:id="@+id/login_alipay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_alipay"
                android:src="@drawable/ic_alipay_28" />

            <ImageButton
                android:id="@+id/login_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_weibo"
                android:src="@drawable/ic_weibo_28" />

            <ImageButton
                android:id="@+id/login_add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:contentDescription="@string/add_record_ib_desc_weibo"
                android:src="@drawable/ic_add_round_28" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/aa_ways"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_tele"
            app:spanCount="5"
            tools:itemCount="5" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_et_add"
        android:padding="12dp"
        tools:layout_editor_absoluteX="16dp">

        <CheckBox
            android:id="@+id/dialog_add_account_is_main_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_account_checkbox" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_et_add"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:contentDescription="@string/add_record_account_desc_note"
            android:src="@drawable/ic_notes_24" />

        <EditText
            android:id="@+id/dialog_add_account_notes"
            style="@style/et_add_account"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/add_account_et_hint_notes"
            android:importantForAutofill="no"
            android:inputType="textMultiLine" />
    </LinearLayout>

</LinearLayout>