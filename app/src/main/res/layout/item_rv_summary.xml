<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_rv_summary_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_rv_summary_app_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/summary_desc_app_icon"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_android_round_32"
            app:layout_constraintBottom_toBottomOf="@+id/item_rv_summary_app_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_rv_summary_app_name" />

        <TextView
            android:id="@+id/item_rv_summary_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lock it" />

        <TextView
            android:id="@+id/item_rv_summary_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_rv_summary_app_name"
            app:layout_constraintTop_toBottomOf="@+id/item_rv_summary_app_name"
            tools:text="188888888888" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/item_rv_summary_account_name"
            app:layout_constraintStart_toEndOf="@+id/item_rv_summary_account_name"
            app:layout_constraintTop_toTopOf="@+id/item_rv_summary_account_name">

            <ImageView
                android:id="@+id/item_rv_summary_tele"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_tele"
                app:srcCompat="@drawable/ic_phone_round_24"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/item_rv_summary_email"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_email"
                app:srcCompat="@drawable/ic_email_round_24"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/item_rv_summary_qq"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_qq"
                android:src="@drawable/ic_qq_24"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/item_rv_summary_wechat"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_wechat"
                app:srcCompat="@drawable/ic_wechat_24"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/item_rv_summary_weibo"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_weibo"
                app:srcCompat="@drawable/ic_weibo_24"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/item_rv_summary_alipay"
                style="@style/iv_summary_item"
                android:contentDescription="@string/add_record_ib_desc_alipay"
                app:srcCompat="@drawable/ic_alipay_24"
                tools:visibility="visible" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>